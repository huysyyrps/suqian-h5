<template>
	<view class="bg-white">

		<!-- <cLabel v-for="(e,i) in " title='text' v-model='form.text' :clear='true' @handRight='handTextRight' :flex='false' :dataText='form.text' mode='text'  rightIcon='cuIcon-close'   /> -->
		<cLabel title='1路' v-model='form.text' rightIcon='cuIcon-people' />
		<view class="hourLine"></view>
		<view class="item">
			<text class="itemName">驾驶员:</text>
			<input class="input" placeholder="点击选择驾驶员" :value="driver" type="text" @click="bindPersonChange" />
		</view>
		<view class="hourLine"></view>
		<cLabel title='开始日期' :dataText='form.yearMonthbeg' v-model='form.yearMonthbeg' mode='date' />
		<cLabel title='结束日期' :dataText='form.yearMonthend' v-model='form.yearMonthend' mode='date' />
		<cLabel title='开始时间 : ' :dataText='form.timebeg' v-model='form.timebeg' mode='time' />
		<cLabel title='结束时间 : ' :dataText='form.timeend' v-model='form.timeend' mode='time' />
		
		<cLabel title='加车时间 : ' :dataText='form.timeadd' v-model='form.timeadd' mode='time' />
		<cLabel title='车辆自编号 : ' v-model='form.carno'  mode='idcard' :dataText='form.carno'  rightIcon='cuIcon-vipcard text-red'  />

		<cLabel title='发车方向 : ' :dataText='form.fangxiang' :selectList="selectList" v-model='form.fangxiang' mode='selector' />
		<cLabel title='发车类型 : ' :dataText='form.leixing' :selectList="selectListtype" v-model='form.leixing' mode='selector' />
		<cLabel title='是否加班 : ' :dataText='form.jiaban' :selectList="jiabantype" v-model='form.jiaban' mode='selector' />
		
		<view class="item">
			<text class="itemName">下行开始站点 :</text>
			<input class="input" placeholder="点击选择站点" :value="downstationsta" type="text" @click="begstationdown" />
		</view>
		<view class="hourLine"></view>
		<view class="item">
			<text class="itemName">下行结束站点 :</text>
			<input class="input" placeholder="点击选择站点" :value="downstationend" type="text" @click="endstationdown" />
		</view>
		<view class="hourLine"></view>
		<view class="item">
			<text class="itemName">上行开始站点 :</text>
			<input class="input" placeholder="点击选择站点" :value="stationnamedownbeg" type="text" @click="begstationup" />
		</view>
		<view class="hourLine"></view>
		<view class="item">
			<text class="itemName">上行结束站点 :</text>
			<input class="input" placeholder="点击选择站点" :value="stationnamedownend" type="text" @click="endstationup" />
		</view>
		<view class="hourLine"></view>
		<button class="bg-blue" @tap="handSubmit">确定</button>
	</view>
</template>

<script>
	var check = require('@/common/checker.js')
	import cLabel from "@/components/c-label/c-label.vue"
	import cUpload from "@/components/c-upload/c-upload.vue"
	var resquestJSOB = require('@/common/js/hy-request.js');
	var urlJSOB = require('@/common/js/hy-url.js');
	var stringUtil = require('@/common/js/hy-stringUtil.js');
	var type;
	var zufufang;
	var gowork;
	export default {
		components: {
			cLabel,
			cUpload
		},
		data() {
			return {

				passState: 'cuIcon-attentionforbidfill text-gray',
				selectList: [{
						label: "全部",
						value: 0
					},
					{
						label: "主厂",
						value: 1
					},
					{
						label: "副厂",
						value: 2
					},
				],
				jiabantype: [
						
					{
						label: "否",
						value: 0
					},
					{
						label: "是",
						value: 1
					},
				],
				selectListtype: [{
						label: "主站到主站",
						value: 1
					},
					{
						label: "主站到副站",
						value: 2
					},
					{
						label: "副站到主站",
						value: 3
					},{
						label: "主区间到主站",
						value: 4
					},
					{
						label: "主区间到副站",
						value: 5
					},
					{
						label: "副区间到主站",
						value: 6
					},
				],
				driver: '',
				userCode: '',
				downstationsta: '',
				downstationend: '',
				stationnamedownbeg: '',
				stationnamedownend: '',
				stationOrder1: '',
				stationOrder2: '',
				stationOrder3: '',
				stationOrder4: '',
				form: {
					yearMonthbeg: "",
					yearMonthend: '',
					timeadd: '',
					carno: '',
					fangxiang: '',
					timebeg: '',
					timeend: '',
					jiaban: ''
				},
				rules: {
					text: [{
							checkType: 'phone',
							errorMsg: '请正确输入手机号码'
						},
						{
							checkType: 'maxMin',
							max: 11,
							min: 7,
							errorMsg: '长度介于 7-11 个字符'
						},
					],
					idcard: [{
							checkType: 'noempty',
							errorMsg: '不能为空'
						},
						{
							checkType: 'card',
							errorMsg: '请正确输入身份证号码'
						},
					]
				}
			}
		},
		methods: {
			handSubmit() {
				if(this.from.jiaban=="否"){
					gowork=0;
				}else if(this.from.jiaban=="是"){
					gowork=1;
				}
				
				if(this.driver==''){
					uni.showToast({
						title:'驾驶员不能为空',
						icon:"none"
					})
				}else if(this.form.yearMonthbeg==''){
					uni.showToast({
						title:'开始日期不能为空',
						icon:"none"
					})
				}else if(this.form.yearMonthend==''){
					uni.showToast({
						title:'结束日期不能为空',
						icon:"none"
					})
				}else if(this.form.timeadd==''){
					uni.showToast({
						title:'加车时间不能为空',
						icon:"none"
					})
				}else if(this.form.carno==''){
					uni.showToast({
						title:'车辆自编号不能为空',
						icon:"none"
					})
				}else if(this.form.fangxiang==''){
					uni.showToast({
						title:'发车方向不能为空',
						icon:"none"
					})
				}else if(this.form.leixing==''){
					uni.showToast({
						title:'发车类型不能为空',
						icon:"none"
					})
				}else{
					
					if(this.form.fangxiang=="全部"){
						zufufang=0;
					}else if(this.form.fangxiang=="主厂"){
						zufufang=1;
					}else if(this.form.fangxiang=="副厂"){
						zufufang=2;
					}
					
					if(this.form.leixing=="主站到主站"){
						type=1;
						this.sendaddcar();
					}else if(this.form.leixing=="主站到副站"){
						type=2;
						this.sendaddcar();
					}else if(this.form.leixing=="副站到主站"){
						type=3;
						this.sendaddcar();
					}else if(this.form.leixing=="主区间到主站"){
						type=4;
						if(this.downstationsta==''){
							uni.showToast({
								title:'下行开始站点不能为空',
								icon:"none"
							})
						}else if(this.downstationend==''){
							uni.showToast({
								title:'下行结束站点不能为空',
								icon:"none"
							})
						}else if(this.stationnamedownbeg==''){
							uni.showToast({
								title:'上行开始站点不能为空',
								icon:"none"
							})
						}else if(this.stationnamedownend==''){
							uni.showToast({
								title:'上行结束站点不能为空',
								icon:"none"
							})
						}else{
							this.sendaddcar();
						}
						
						
					}else if(this.form.leixing=="主区间到副站"){
						type=5;
						if(this.downstationsta==''){
							uni.showToast({
								title:'下行开始站点不能为空',
								icon:"none"
							})
						}else if(this.downstationend==''){
							uni.showToast({
								title:'下行结束站点不能为空',
								icon:"none"
							})
						}else{
							this.sendaddcar();
						}
					}else if(this.form.leixing=="副区间到主站"){
						type=6;
						 if(this.stationnamedownbeg==''){
							uni.showToast({
								title:'上行开始站点不能为空',
								icon:"none"
							})
						}else if(this.stationnamedownend==''){
							uni.showToast({
								title:'上行结束站点不能为空',
								icon:"none"
							})
						}else{
							this.sendaddcar();
						}
					}
					
					
				}
				
				
			},
			
			sendaddcar(){
				var time=this.form.timeadd.replace(new RegExp(/(:)/g),"");
				console.log(time.substring(0,time.length-2))
				var timeb=this.form.timebeg.replace(new RegExp(/(:)/g),"");
				var timee=this.form.timeend.replace(new RegExp(/(:)/g),"");
				
				resquestJSOB.sendGetRequestJson({
					url: urlJSOB.getaddcar, 
					data: {
						cmd: 2,
						lineCode: 11,
						busCode: this.form.carno,
						scheId: 100001,//调度员号码
						begDate: this.form.yearMonthbeg.replace(new RegExp(/(-)/g),""),//开始日期
						endDate: this.form.yearMonthend.replace(new RegExp(/(-)/g),""),//结束日期
						begTime: timeb.substring(0,timeb.length-2),//开始时间
						endTime: timee.substring(0,timee.length-2),//结束时间
						downUpfcfx: zufufang,//主副厂发车方向
						fclx: type,//发车类型
						jcsj: time.substring(0,time.length-2),//加车时间
						newJSY: this.userCode,//驾驶员
						downBegin: this.stationOrder1,//下行开始站点
						downEnd: this.stationOrder2,//下行结束站点
						upBegin: this.stationOrder3,//上行开始站点
						upEnd: this.stationOrder4,//上行结束站点
						sfjb:gowork// 是否加班
					},
					successCallBack: function(res) {
						if(res.success==true){
							uni.showToast({
								title:'新增成功',
								
							})
						}else if(res.success==true){
							uni.showToast({
								title:'加车失败'+res.msg,
								icon:"none"
							})
						}
						console.log(res)
					},
					failCallBack: function(res) {
						console.log(res)
					}
				});
			},
			bindPersonChange: function(e) {
				uni.navigateTo({
					url: '../../../../constant/personnel/personnel'
				});
			},
			begstationdown: function(e) {
				uni.navigateTo({
					url: '../../../../Dispatching/StationList?state=1'
				});
			},

			endstationdown: function(e) {
				uni.navigateTo({
					url: '../../../../Dispatching/StationList?state=2'
				});
			},
			begstationup: function(e) {
				uni.navigateTo({
					url: '../../../../Dispatching/StationList?state=3'
				});
			},
			endstationup: function(e) {
				uni.navigateTo({
					url: '../../../../Dispatching/StationList?state=4'
				});
			}

		},
		onLoad() {

		},
	}
</script>
